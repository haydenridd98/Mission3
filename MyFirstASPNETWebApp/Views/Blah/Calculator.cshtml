@{
    ViewData["Title"] = "Grade Calculator";
}
@model CalculatorModel;

<h2>Grade Calculator!</h2>
<form method="post">
    <label>Assignments Grade:</label>
    <input type="number" id="assignment" asp-for="Assignment" /> <br />
    <br />
    <label>Grop Project Grade:</label>
    <input type="number" id="group" asp-for="Group" /> <br />
    <br />
    <label>Quiz Grade:</label>
    <input type="number" id="quiz" asp-for="Quiz" /> <br />
    <br />
    <label>Exam Grade:</label>
    <input type="number" id="exam" asp-for="Exam" /> <br />
    <br />
    <label>Intex Grade:</label>
    <input type="number" id="intex" asp-for="Intex" /> <br />
    <br />
    <input id="calculate" type="submit" value="Calculate Grade"/>

    <div asp-validation-summary="All"></div>
</form>


